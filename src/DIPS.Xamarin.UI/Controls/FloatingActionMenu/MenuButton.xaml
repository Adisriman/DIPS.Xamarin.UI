<?xml version="1.0"
      encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ValueConverters="clr-namespace:DIPS.Xamarin.UI.Converters.ValueConverters"
             x:Name="CodeBehind"
             mc:Ignorable="d"
             InputTransparent="True"
             x:Class="DIPS.Xamarin.UI.Controls.FloatingActionMenu.MenuButton">
    <Grid BindingContext="{x:Reference CodeBehind}"
          ColumnSpacing="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="0"
               Padding="5"
               CornerRadius="5"
               HasShadow="False"
               VerticalOptions="Center"
               HorizontalOptions="End">
            <Label Text="{Binding Title}"
                   TextColor="{Binding TitleTextColor}"
                   VerticalOptions="Center"
                   HorizontalOptions="End" />
        </Frame>

        <Button Grid.Column="1"
                BindingContext="{x:Reference CodeBehind}"
                WidthRequest="{Binding Size}"
                HeightRequest="{Binding Size}"
                CornerRadius="{Binding Size, Converter={ValueConverters:MultiplicationConverter Factor=.5}}"
                BackgroundColor="{Binding BackgroundColor}"
                BorderColor="White"
                BorderWidth="3"
                Text="{Binding FontIcon}"
                TextColor="{Binding FontIconColor}"
                FontFamily="{Binding FontFamily}"
                Clicked="MenuButton_OnClicked" />
    </Grid>
</ContentView>