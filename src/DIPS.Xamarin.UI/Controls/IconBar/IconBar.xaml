<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIPS.Xamarin.UI.Controls.IconBar.IconBar"

             VerticalOptions="Center"
             HorizontalOptions="Center"

             xmlns:Local="clr-namespace:DIPS.Xamarin.UI.Controls.IconBar;assembly=DIPS.Xamarin.UI">

    <ContentView.Content>
        <StackLayout x:DataType="{x:Type Local:IconBar}"
                     BindingContext="{Binding Source={RelativeSource AncestorType={x:Type Local:IconBar}}}"
                     BackgroundColor="Transparent"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"

                     Spacing="{Binding Spacing}"
                     Orientation="{Binding Orientation}"
                     BindableLayout.ItemsSource="{Binding ItemSource}"
                     BindableLayout.ItemTemplate="{Binding ItemTemplate}" />
    </ContentView.Content>

</ContentView>