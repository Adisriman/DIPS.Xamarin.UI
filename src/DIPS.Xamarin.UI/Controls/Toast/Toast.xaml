<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DIPS.Xamarin.UI.Controls.Toast.Toast"
             x:Name="ToasterView"
             
             xmlns:Local="clr-namespace:DIPS.Xamarin.UI.Controls.Toast;assembly=DIPS.Xamarin.UI">
    <ContentView.Content>
        <StackLayout 
            x:DataType="{x:Type Local:Toast}"
            BindingContext="{Binding Source={RelativeSource AncestorType={x:Type Local:Toast}}}">
            
            <Label Text="{Binding Text}"
                   TextColor="{Binding TextColor}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentView.Content>
</ContentView>