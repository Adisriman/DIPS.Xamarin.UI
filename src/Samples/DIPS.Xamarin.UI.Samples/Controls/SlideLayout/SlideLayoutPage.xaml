<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxui="http://dips.xamarin.ui.com"
             x:Class="DIPS.Xamarin.UI.Samples.Controls.SlideLayout.SlideLayoutPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        
        <Label Text="{Binding Selected}"
               Grid.Row="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <dxui:SlidableLayout BackgroundColor="WhiteSmoke"
                             Grid.Row="1"
                             Config="{Binding Config}"
                             SelectedItemChangedCommand="{Binding OnSelectedIndexChangedCommand}"
                             SlideProperties="{Binding SlidableProperties}">
        </dxui:SlidableLayout>


        <dxui:SlidableContentLayout SlideProperties="{Binding SlidableProperties}"
                                    Grid.Row="2"
                                    BackgroundColor="LightGray"
                                    Padding="0,10"
                                    Config="{Binding Config}"
                                    >
           
        </dxui:SlidableContentLayout>
    </Grid>
</ContentPage>
